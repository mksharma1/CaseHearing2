<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_Hearing">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Case Hearings"
                android:textColor="@color/endcolor"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/textview_shape"
                android:textColor="@color/endcolor"
                android:hint="Search Case Id"
                android:textColorHint="@color/endcolor"
                android:padding="6dp"
                />

            <ImageView
                android:id="@+id/search"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/search_icon"
                android:background="@color/endcolor"
                />

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search By : "
                    android:textColor="@color/endcolor"
                    android:layout_margin="15dp"
                    android:textSize="16dp"/>

                <RadioGroup
                    android:id="@+id/searchOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonCaseId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Case Id"
                        android:textColor="@color/endcolor"
                        android:layout_margin="10dp"
                        android:textSize="16dp"/>
                    <RadioButton
                        android:id="@+id/radioButtonAdvocateName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advocate Name "
                        android:textColor="@color/endcolor"
                        android:layout_margin="10dp"
                        android:textSize="16dp"/>
                </RadioGroup>

            </LinearLayout>



                <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp">

                <TableRow
                    android:layout_margin="10dp"
                    android:padding="6dp"></TableRow>

            </TableLayout>

                </HorizontalScrollView>


            <TextView
                android:id="@+id/hearings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:textColor="@color/endcolor"
                android:layout_marginLeft="30dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>